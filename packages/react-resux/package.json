    "reselect": "^4.0.0",
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.2",
    "jest": "^24.9.0",
